<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        tools:ignore="MissingDefaultResource">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_border_square"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Last Login"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/txt_last_login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="16/08/2022 08:24:27"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Last Job Activity"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/txt_last_job"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="16/08/2022 08:24:27"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Pending Job"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:background="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Today"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/txt_pending_today"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="70dp"
                        android:background="#000000" />

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Total"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/txt_pending_total"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Completed Job"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:background="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Today"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/txt_completed_today"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="70dp"
                        android:background="#000000" />

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Monthly"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/txt_completed_monthly"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="200dp"
            android:background="#213e9a">

            <Button
                android:id="@+id/btn_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#213e9a"
                android:text="Close"
                android:textColor="#ffffff"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>
</HorizontalScrollView>
